{
    "require": {
        "liborm85/composer-vendor-cleaner": "^1.7",
        "nicolab/php-ftp-client": "^2.0",
        "symfony/dom-crawler": "^7.0",
        "symfony/css-selector": "^7.0"
    },
    "config": {
		"platform": {
			"php": "8.3"
		},
        "allow-plugins": {
            "liborm85/composer-vendor-cleaner": true
        },
		"platform-check": false
    },
	"extra": {
		"dev-files": {
			"/": [
				"tests/",
				"docs/",
				".travis.yml",
				"LICENSE",
				"LICENSE.txt",
				"CREDITS",
				".gitignore",
				".github/",
				"*.md"
			],
			"*/*": [
				"*.sh"
			],
			"bin": [
				"*.bat"
			],
			"twig/twig": [
				"doc/",
				"/drupal_test.sh"   
			],
			"symfony/*": [
				"Tests/"
			],
			"other/package": [
				"/src/**/*.md"      
			],
			"example/package": [
				"languages/*",
				"!languages/cs.php" 
			]
		}
	}
}
